<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_talk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="horizontal"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="@dimen/speaker_image_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/talk_image_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            tools:src="@drawable/ic_action_not_important" />

        <TextView
            android:id="@+id/talkImageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="2sp"
            android:paddingTop="2sp"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            tools:text="Keynote" />

        <ImageView
            android:id="@+id/talk_image_track"
            android:layout_width="@dimen/track_image_size"
            android:layout_height="@dimen/track_image_size"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:paddingTop="0dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/mxt_icon__aliens" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/talk_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Le sujet du feu tout puissant" />

        <!-- Horaires -->

        <LinearLayout
            android:id="@+id/time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/talk_horaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/grey_dark"
                android:textStyle="bold"
                tools:text="jeu. de 8:00 AM Ã  10:00 AM" />

            <ImageView
                android:id="@+id/talk_image_language"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:contentDescription="@null"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/talk_salle"
                style="@style/myTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:lines="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                tools:text="G.A" />
        </LinearLayout>

        <TextView
            android:id="@+id/talk_shortdesciptif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="Bacon ipsum dolor amet sirloin picanha jerky, ground round brisket turducken pancetta beef ribs andouille. Hamburger pork loin tenderloin meatloaf pig, short loin beef ribs ball tip burgdoggen shoulder alcatra shank andouille bacon turkey. Chuck landjaeger salami pastrami, turducken ham hock beef strip steak shank ball tip andouille meatloaf. Brisket shoulder tri-tip strip steak corned beef leberkas jerky sausage fatback meatball chuck ribeye. Pig shank frankfurter bacon salami pork belly rump. Turducken jowl pastrami, fatback kielbasa ball tip frankfurter landjaeger chicken brisket tail kevin pancetta. Ribeye tail venison, hamburger biltong jowl bresaola chuck turkey picanha." />

    </LinearLayout>


</LinearLayout>