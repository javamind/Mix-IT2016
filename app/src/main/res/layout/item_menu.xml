<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:id="@+id/item_menu"
                android:background="@drawable/selector_menu">
    <TextView
            android:id="@+id/menu_color"
            android:layout_width="@dimen/text_size_menu_icon"
            android:layout_height="@dimen/text_size_menu_icon"
            android:layout_marginRight="@dimen/speaker_image_padding"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"/>
    <TextView
            android:id="@+id/menu_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@id/menu_color"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:gravity="center_vertical"
            android:paddingBottom="4dp"
            android:paddingTop="8dp"
            android:textColor="@color/color_menu"/>

</RelativeLayout>